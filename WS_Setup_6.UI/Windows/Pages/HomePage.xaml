<UserControl x:Class="WS_Setup_6.UI.Windows.Pages.HomePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:WS_Setup_6.UI.ViewModels.Pages"
             Height="300"
             Width="800">

    <UserControl>
        <StackPanel VerticalAlignment="Center"
                    HorizontalAlignment="Center">
            <TextBlock Text="{Binding WelcomeMessage}"
                       FontSize="24" />
            <TextBlock Text="{Binding Instruction}"
                       TextAlignment="Center"
                       Margin="0,8" />
            <Button Content="Start Configuration"
                    Background="CornflowerBlue"
                    Command="{Binding StartConfigurationCommand}"
                    Width="200"
                    Height="40" />
        </StackPanel>
    </UserControl>

</UserControl>